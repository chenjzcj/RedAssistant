<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@android:color/holo_red_light"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingTop="20dp"
        android:text="@string/aboutsus"
        android:textColor="@android:color/white"
        android:textSize="20sp" />


    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="23dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/second_text_color"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textColor="@color/second_text_color"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="分享"
        android:textColor="@color/second_text_color"
        android:textSize="@dimen/main_text_size" />

    <View
        android:layout_width="275dp"
        android:layout_height="0.5dp"
        android:layout_gravity="center"
        android:layout_marginBottom="23dp"
        android:layout_marginTop="12dp"
        android:background="@color/line_horizontal" />

    <ImageView
        android:layout_width="162dp"
        android:layout_height="162dp"
        android:layout_gravity="center"
        android:background="@drawable/shape_qrcode_bg"
        android:padding="9dp"
        android:src="@drawable/uwatch_qr_code" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/down_app"
        android:textColor="@color/second_text_color"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_share_friend"
        style="@style/main_button_styles"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="分享好友" />

</LinearLayout>